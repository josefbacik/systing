#!/bin/bash
#
# Pre-push hook to enforce tests
#
# This hook checks if all tests pass before allowing a push.

# Colors
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Track if any check fails
FAILED=0

# Run tests with no-default-features
echo -ne "Running tests (no-default-features)... "
if cargo test --no-default-features &> /dev/null; then
    echo -e "${GREEN}✓${NC}"
else
    echo -e "${RED}✗${NC}"
    FAILED=1
fi

# Run tests with pystacks feature
echo -ne "Running tests (pystacks)... "
if cargo test --features pystacks &> /dev/null; then
    echo -e "${GREEN}✓${NC}"
else
    echo -e "${RED}✗${NC}"
    FAILED=1
fi

# Exit with failure if any check failed
if [ $FAILED -eq 1 ]; then
    echo -e "\n${RED}Pre-push checks failed. Please fix the issues above.${NC}"
    exit 1
else
    echo -e "\n${GREEN}All pre-push checks passed!${NC}"
    exit 0
fi
