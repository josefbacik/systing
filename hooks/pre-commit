#!/bin/bash
#
# Pre-commit hook to enforce cargo fmt, clippy, and tests
#
# This hook checks if the code is properly formatted, passes clippy,
# and all tests pass before allowing a commit.

# Colors
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Track if any check fails
FAILED=0

# Check if code is formatted
echo -ne "Checking formatting... "
if cargo fmt --check &> /dev/null; then
    echo -e "${GREEN}✓${NC}"
else
    echo -e "${RED}✗ (run 'cargo fmt')${NC}"
    FAILED=1
fi

# Check clippy with no-default-features
echo -ne "Checking clippy (no-default-features)... "
if cargo clippy --all-targets --no-default-features -- -D warnings &> /dev/null; then
    echo -e "${GREEN}✓${NC}"
else
    echo -e "${RED}✗${NC}"
    FAILED=1
fi

# Check clippy with pystacks feature (only if dependencies are available)
echo -ne "Checking clippy (pystacks)... "
if pkg-config --exists fmt re2 libcap 2>/dev/null; then
    if cargo clippy --all-targets --features pystacks -- -D warnings &> /dev/null; then
        echo -e "${GREEN}✓${NC}"
    else
        echo -e "${RED}✗${NC}"
        FAILED=1
    fi
else
    echo -e "${GREEN}⊘ (dependencies not installed)${NC}"
fi

# Run tests with no-default-features
echo -ne "Running tests (no-default-features)... "
if cargo test --no-default-features &> /dev/null; then
    echo -e "${GREEN}✓${NC}"
else
    echo -e "${RED}✗${NC}"
    FAILED=1
fi

# Run tests with pystacks feature (only if dependencies are available)
echo -ne "Running tests (pystacks)... "
if pkg-config --exists fmt re2 libcap 2>/dev/null; then
    if cargo test --features pystacks &> /dev/null; then
        echo -e "${GREEN}✓${NC}"
    else
        echo -e "${RED}✗${NC}"
        FAILED=1
    fi
else
    echo -e "${GREEN}⊘ (dependencies not installed)${NC}"
fi

# Get repo root for integration test script
REPO_ROOT=$(git rev-parse --show-toplevel)

# Run integration tests (requires sudo)
echo -ne "Running integration tests... "
if "$REPO_ROOT/scripts/run-integration-tests.sh" &> /dev/null; then
    echo -e "${GREEN}✓${NC}"
else
    echo -e "${RED}✗${NC}"
    FAILED=1
fi

# Run integration tests with pystacks feature (only if dependencies are available)
echo -ne "Running integration tests (pystacks)... "
if pkg-config --exists fmt re2 libcap 2>/dev/null; then
    if CARGO_FEATURES=pystacks "$REPO_ROOT/scripts/run-integration-tests.sh" &> /dev/null; then
        echo -e "${GREEN}✓${NC}"
    else
        echo -e "${RED}✗${NC}"
        FAILED=1
    fi
else
    echo -e "${GREEN}⊘ (dependencies not installed)${NC}"
fi

# Exit with failure if any check failed
if [ $FAILED -eq 1 ]; then
    echo -e "\n${RED}Pre-commit checks failed. Please fix the issues above.${NC}"
    exit 1
else
    echo -e "\n${GREEN}All pre-commit checks passed!${NC}"
    exit 0
fi
